{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Spec Kit Memory Metadata",
  "type": "object",
  "required": [
    "timestamp",
    "messageCount",
    "decisionCount",
    "diagramCount",
    "skillVersion",
    "autoTriggered",
    "filtering",
    "semanticSummary",
    "embedding"
  ],
  "properties": {
    "timestamp": {
      "type": "string"
    },
    "messageCount": {
      "type": "integer",
      "minimum": 0
    },
    "decisionCount": {
      "type": "integer",
      "minimum": 0
    },
    "diagramCount": {
      "type": "integer",
      "minimum": 0
    },
    "skillVersion": {
      "type": "string"
    },
    "autoTriggered": {
      "type": "boolean"
    },
    "filtering": {
      "type": "object"
    },
    "semanticSummary": {
      "type": "object"
    },
    "embedding": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
