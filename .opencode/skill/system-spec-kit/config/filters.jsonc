// ───────────────────────────────────────────────────────────────
// CONFIG: CONTENT FILTERS
// ───────────────────────────────────────────────────────────────
{
  // ─────────────────────────────────────────────────────────────
  // 1. PIPELINE
  // ─────────────────────────────────────────────────────────────
  "pipeline": {
    "enabled": true,
    "stages": ["noise", "dedupe", "quality"]
  },

  // ─────────────────────────────────────────────────────────────
  // 2. NOISE FILTER
  // ─────────────────────────────────────────────────────────────
  "noise": {
    "enabled": true,
    "minContentLength": 15,
    "minUniqueWords": 3
  },

  // ─────────────────────────────────────────────────────────────
  // 3. DEDUPLICATION
  // ─────────────────────────────────────────────────────────────
  "dedupe": {
    "enabled": true,
    "hashLength": 300,
    "similarityThreshold": 0.70
  },

  // ─────────────────────────────────────────────────────────────
  // 4. QUALITY SCORING
  // ─────────────────────────────────────────────────────────────
  "quality": {
    "enabled": true,
    "warnThreshold": 20,
    "factors": {
      "uniqueness": 0.30,
      "density": 0.30,
      "fileRefs": 0.20,
      "decisions": 0.20
    }
  }
}
