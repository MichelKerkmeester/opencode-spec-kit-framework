// ───────────────────────────────────────────────────────────────
// CONFIG: CONTENT FILTERS
// ───────────────────────────────────────────────────────────────
{
  // ─────────────────────────────────────────────────────────────
  // 1. PIPELINE
  // ─────────────────────────────────────────────────────────────
  "pipeline": {
    "enabled": true,
    // Execution order is intentional and consumed as declared.
    "stages": [
      "noise",
      "dedupe",
      "quality"
    ]
  },

  // ─────────────────────────────────────────────────────────────
  // 2. NOISE FILTER
  // ─────────────────────────────────────────────────────────────
  "noise": {
    "enabled": true,
    // Guardrail: reject very short/low-information content early.
    "minContentLength": 15,
    "minUniqueWords": 3
  },

  // ─────────────────────────────────────────────────────────────
  // 3. DEDUPLICATION
  // ─────────────────────────────────────────────────────────────
  "dedupe": {
    "enabled": true,
    // Hash and threshold tuned for stable near-duplicate suppression.
    "hashLength": 300,
    "similarityThreshold": 0.70
  },

  // ─────────────────────────────────────────────────────────────
  // 4. QUALITY SCORING
  // ─────────────────────────────────────────────────────────────
  "quality": {
    "enabled": true,
    // Warn (do not block) when the weighted quality score is low.
    "warnThreshold": 20,
    "factors": {
      "uniqueness": 0.30,
      "density": 0.30,
      "fileRefs": 0.20,
      "decisions": 0.20
    }
  }
}
