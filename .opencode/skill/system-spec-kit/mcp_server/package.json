{
  "name": "@spec-kit/mcp-server",
  "version": "1.7.2",
  "description": "Semantic Memory MCP Server - provides 22 tools for semantic search, memory management, validation, checkpoints, causal graphs, session learning, and auto-indexing",
  "main": "dist/context-server.js",
  "exports": {
    ".": "./dist/context-server.js",
    "./*.js": "./dist/*.js",
    "./*": "./dist/*.js"
  },
  "bin": {
    "context-server": "./dist/context-server.js"
  },
  "scripts": {
    "start": "node dist/context-server.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "claude",
    "semantic-memory",
    "vector-search",
    "auto-indexing"
  ],
  "author": "Michel Kerkmeester",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^12.6.2",
    "sqlite-vec": "^0.1.7-alpha.2"
  },
  "devDependencies": {
    "vitest": "^4.0.18"
  }
}
